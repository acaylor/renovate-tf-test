{
  extends: [
    "config:recommended",
    ":separateMultipleMajorReleases",
    ":ignoreUnstable",
    ":dependencyDashboard",
  ],
  "packageRules": [{
      "fileMatch": ["\\.tf$"],
      "matchStrings": ["^\\s+source\\s*=\\s*\"github.com\/(?<depName>.*?\\/\\/.*)\\?ref=(?<currentValue>.*?)\""],
      "matchDatasources": "git-tags",
      "versioning": "regex:^((?<compatibility>.*)-v|v*)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ],
  configMigration: true
}

